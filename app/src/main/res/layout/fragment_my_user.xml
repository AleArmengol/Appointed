<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:shape="rectangle"
    tools:context=".ui.MyUser.MyUserFragment">


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TableRow>

            <TextView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Informacion personal"
                android:textStyle="bold"></TextView>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>

        <TableRow>

            <TextView
                android:id="@+id/textName"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:gravity="center"></TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>


        <TableRow>

            <TextView
                android:id="@+id/textLastName"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Last nameeeeeeeee"></TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>


        <TableRow>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Email"></TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>


        <TableRow>

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Phone number"></TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>


        <TableRow>

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Address"></TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black"></View>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="212dp"
        android:layout_height="254dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>